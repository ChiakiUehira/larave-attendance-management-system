<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <script src="https://cdn.jsdelivr.net/npm/vue"></script>
  <link rel="stylesheet" href="element-ui.css">
  <script src="element-ui.js"></script>
  <link rel="stylesheet" href="reset.css">
</head>
<body>
<div id="app" class="container">
  <div class="confirm">
    <p>姓: {{ user.last_name }}</p>
    <p>名: {{ user.first_name }}</p>
    <p>姓(かな): {{ user.last_name_kana }}</p>
    <p>名(かな): {{ user.first_name_kana }}</p>
    <p>Email: {{ user.email }}</p>
    <p>性別: {{ user.gender }}</p>
    <p>パスワード: {{ user.password }}</p>
    <p>郵便番号: {{ user.postal_code }}</p>
    <p>住所: {{ user.address }}</p>
    <p>電話番号: {{ user.tel }}</p>
    <p>誕生日: {{ user.birthday }}</p>
    <form action="/register" method="post" id="register">
      <el-button type="primary" @click="register">登録</el-button>
    </form>
    <form action="/cancel" method="get" id="cancel">
      <el-button type="danger" @click="cancel">もう一度入力する</el-button>
    </form>
  </div>
</div>

<script>
  new Vue({
    el: '#app',
    data: function () {
      return {visible: false}
    },
    methods:{
      register(){
        const register = document.getElementById('register')
        register.submit()
      },
      cancel(){
        const cancel = document.getElementById('cancel')
        cancel.submit()
      }
    }
  })
</script>

<style scoped>
  body {
    background: #F9F9F9;
    font-family: "Source Sans Pro", "Helvetica Neue", Arial, sans-serif;
    text-align: center;
  }

  .container {
    width: 960px;
    margin: 0 auto;
  }

  .confirm {
    background: #fff;
    padding: 20px;
  }
  .confirm p{
    padding:10px;
    border-top:solid 1px #E6EBF5;
    color:#5a5e66;
    line-height:40px;
  }
  .el-button:first-child{
    margin-bottom:10px;
  }

</style>
</body>
</html>
